[TEST_SUITE test_tolower]

[TEST_BODY]
    LDA     $1,string
    PUSHJ   $0,:string:tolower
    [ASSERT_STR_EQ string,expected_value]
[TEST_BODY_END]

[TEST_CASE lower]
string          BYTE "abcdefghijklmnopqrstuvwxyz",0
expected_value  BYTE "abcdefghijklmnopqrstuvwxyz",0
[TEST_CASE_END]

[TEST_CASE upper]
string          BYTE "ABCDEFGHIJKLMNOPQRSTUVWXYZ",0
expected_value  BYTE "abcdefghijklmnopqrstuvwxyz",0
[TEST_CASE_END]

[TEST_CASE lower_and_upper]
string          BYTE "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ",0
expected_value  BYTE "abcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz",0
[TEST_CASE_END]

[TEST_CASE other_string]
string          BYTE "@[0",0
expected_value  BYTE "@[0",0
[TEST_CASE_END]

[TEST_SUITE_END]
