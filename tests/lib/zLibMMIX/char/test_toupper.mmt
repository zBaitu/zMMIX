[TEST_SUITE test_toupper]

[TEST_BODY]
    LDB     $1,char
    PUSHJ   $0,:char:toupper
    STB     $0,actual_value
    [ASSERT_BYTE_EQ actual_value,expected_value]
[TEST_BODY_END]

[TEST_CASE lower_a]
char            BYTE 'a'
actual_value    BYTE
expected_value  BYTE 'A'
[TEST_CASE_END]

[TEST_CASE upper_A]
char            BYTE 'A'
actual_value    BYTE
expected_value  BYTE 'A'
[TEST_CASE_END]

[TEST_CASE lower_z]
char            BYTE 'z'
actual_value    BYTE
expected_value  BYTE 'Z'
[TEST_CASE_END]

[TEST_CASE upper_Z]
char            BYTE 'Z'
actual_value    BYTE
expected_value  BYTE 'Z'
[TEST_CASE_END]

[TEST_CASE back_quote]
char            BYTE '`'
actual_value    BYTE
expected_value  BYTE '`'
[TEST_CASE_END]

[TEST_CASE left_brace]
char            BYTE '{'
actual_value    BYTE
expected_value  BYTE '{'
[TEST_CASE_END]

[TEST_CASE num_9]
char            BYTE '9'
actual_value    BYTE
expected_value  BYTE '9'
[TEST_CASE_END]

[TEST_CASE hyphen]
char            BYTE '-'
actual_value    BYTE
expected_value  BYTE '-'
[TEST_CASE_END]

[TEST_SUITE_END]
